<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.confluent</groupId>
  <artifactId>ks-inspector</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-jar-plugin</artifactId>
          <version>3.1.0</version>
          <configuration>
            <archive>
              <manifest>
                <addClasspath>true</addClasspath>
                <classpathPrefix>lib/</classpathPrefix>
                <mainClass>io.confluent.mdgraph.cli.CLI</mainClass>
              </manifest>
            </archive>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-assembly-plugin</artifactId>
          <configuration>
            <appendAssemblyId>true</appendAssemblyId>
            <archive>
              <manifest>
                <mainClass>io.confluent.mdgraph.cli.CLI</mainClass>
              </manifest>
            </archive>
            <descriptorRefs>
              <descriptorRef>jar-with-dependencies</descriptorRef>
            </descriptorRefs>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>3.1.1</version>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>exec-maven-plugin</artifactId>
          <version>1.6.0</version>
          <executions>
            <execution>
              <id>perf-test-execution</id>
              <phase>package</phase>
              <goals>
                <goal>java</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <mainClass>io.confluent.mdgraph.cli.CLI</mainClass>
            <arguments>
              <argument>${argument1k}</argument>
              <argument>${argument1v}</argument>
              <argument>${argument2k}</argument>
              <argument>${argument2v}</argument>
              <argument>${argument3k}</argument>
              <argument>${argument3v}</argument>
              <argument>${argument4k}</argument>
              <argument>${argument4v}</argument>
            </arguments>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <fork>false</fork>
          <encoding>UTF-8</encoding>
          <source>${java.version}</source>
          <target>${java.version}</target>
          <compilerArgs>
            <arg>-Xlint:all</arg>
          </compilerArgs>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>io.confluent.mdgraph.cli.CLI</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>p1</id>
      <properties>
        <argument1v>/Users/mkampf/Engagements/KSQL/P1</argument1v>
        <argument3v>127.0.0.1:9092</argument3v>
        <argument2v>127.0.0.1</argument2v>
        <maven.test.skip>true</maven.test.skip>
        <java.version>8</java.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.target>1.8</maven.compiler.target>
        <argument2k>-ks</argument2k>
        <argument1k>-p</argument1k>
        <argument4k>-qf</argument4k>
        <argument3k>-bss</argument3k>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <argument4v>script1.ksql</argument4v>
      </properties>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>ksqlDB</id>
      <name>ksqlDB</name>
      <url>https://ksqldb-maven.s3.amazonaws.com/maven/</url>
    </repository>
    <repository>
      <id>confluent_repo</id>
      <name>confluent_repo</name>
      <url>http://packages.confluent.io/maven/</url>
    </repository>
    <repository>
      <id>confluent</id>
      <name>Confluent</name>
      <url>https://jenkins-confluent-packages-beta-maven.s3.amazonaws.com/6.1.0-beta200825192044/1/maven/</url>
    </repository>
  </repositories>
  <properties>
    <argument1v>.</argument1v>
    <argument3v>127.0.0.1:9092</argument3v>
    <argument2v>127.0.0.1</argument2v>
    <java.version>8</java.version>
    <maven.compiler.source>1.8</maven.compiler.source>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <maven.compiler.target>1.8</maven.compiler.target>
    <argument2k>-ksql-server</argument2k>
    <argument1k>-p</argument1k>
    <argument4k>-qf</argument4k>
    <argument3k>-bss</argument3k>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <argument4v>opentsx.ksql</argument4v>
  </properties>
</project>
